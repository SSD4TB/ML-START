<Window x:Class="ML_TCP_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ML_TCP_Server"
        mc:Ignorable="d"
        Title="host" Height="450" Width="500">
    <Grid>
        <Button x:Name="buttonHost" Content="Включить сервер" HorizontalAlignment="Left" Margin="34,81,0,0" VerticalAlignment="Top" Height="67" Width="136" Click="Button_Click"/>
        <ListView Margin="208,37,87,103">
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information">

                    <GridViewColumn DisplayMemberBinding="{Binding Path=ipclient}" Header="IP Client's" Width="200"/>

                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="34,50,0,0" TextWrapping="Wrap" TextAlignment="Center" Text="Сервер отключен" VerticalAlignment="Top" Width="136"/>

    </Grid>
</Window>
